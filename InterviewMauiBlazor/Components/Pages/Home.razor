@page "/"
@using Syncfusion.Blazor
@using Syncfusion.Blazor.Layouts
@using Syncfusion.Blazor.Calendars

@code{
    private DateTime StartDate { get; set; } = DateTime.Now.AddDays(-7).Date;
    private DateTime EndDate { get; set; } = DateTime.Now.Date;

    private void ResetMethod()
    {
        StartDate = DateTime.Now.AddDays(-7).Date;
        EndDate = DateTime.Now.Date;
    }

}
<div class="content">
    <SfDashboardLayout Columns="6" CellSpacing="@(new double[]{10 ,10 })">
        <DashboardLayoutPanels>
            <DashboardLayoutPanel Id="Panel1" SizeX="4" SizeY="2">
                <HeaderTemplate><div class='header'> Transaction complete per days </div></HeaderTemplate>
                <ContentTemplate>
                    <div style="height:100%; width:100%;">
                        <TransactionChart StartDate="@StartDate" EndDate="@EndDate" />
                    </div>
                </ContentTemplate>
            </DashboardLayoutPanel>
            <DashboardLayoutPanel Id="Panel2" SizeX="2" SizeY="2" Column="4">
                <HeaderTemplate><div class='header'> Choose date </div></HeaderTemplate>
                <ContentTemplate>
                    <div style="height:100%; width:100%;">
                        <SfDateRangePicker Format="dd/MM/yyyy" TValue="DateTime" @bind-StartDate="@StartDate" @bind-EndDate="@EndDate"></SfDateRangePicker>
                        <button type="button" class="btn btn-secondary" @onclick="ResetMethod">
                            <i class="fas fa-undo-alt"></i> Reset
                        </button>
                    </div>
                </ContentTemplate>
            </DashboardLayoutPanel>
            <DashboardLayoutPanel Id="Panel3" SizeX="3" SizeY="2" Row=2 Column=3>
                <HeaderTemplate><div class='header'> Total transactions </div></HeaderTemplate>
                <ContentTemplate>
                    <div style="height:100%; width:100%;">
                        <TotalTransaction StartDate="@StartDate" EndDate="@EndDate" />
                    </div>
                </ContentTemplate>
            </DashboardLayoutPanel>
            <DashboardLayoutPanel Id="Panel4" SizeX=3 SizeY=2 Row=2 Column=0>
                <HeaderTemplate><div class='header'> Top product  </div></HeaderTemplate>
                <ContentTemplate>
                    <div style="height:100%; width:100%;">
                        <TopProduct/>
                    </div>
                </ContentTemplate>
            </DashboardLayoutPanel>
            <DashboardLayoutPanel Id="Panel5" SizeX=6 SizeY=2 Column=6 Row=4>
                <HeaderTemplate><div class='header'> Manager transactions </div></HeaderTemplate>
                <ContentTemplate>
                    <div style="height: 100%; width: 100%; display: flex; flex-direction: column; overflow: hidden;">
                        <div style="flex: 1; overflow: auto;">
                            <TransactionManager />
                        </div>
                    </div>
                </ContentTemplate>
            </DashboardLayoutPanel>
        </DashboardLayoutPanels>
    </SfDashboardLayout>
</div>
